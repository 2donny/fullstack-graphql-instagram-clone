datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int      @id @default(autoincrement())
  firstName  String
  lastName   String?
  userName   String   @unique
  email      String   @unique
  bio        String?
  avatar     String?
  password   String
  createdAt  DateTime @default(now())
  updaatedAt DateTime @updatedAt
}
